
public class Question12 {

	public static int sumDigits(int n)
	{
		int sum=0;
		int k = n;
//		for (k=n; k>=10; k/=10 ){//k/10=(k-k%10)/10, n>=1
//			sum+=(k%10);
//		}
//		sum+=k;
		for (k=n; n>=1; k/=10 ){//k/10=(k-k%10)/10, n>=1
			sum+=(k%10);
		}
		return sum;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(sumDigits(1364));
	}

}
