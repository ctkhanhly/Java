public class Question14
{
	//twin primes
	public static boolean isPrime(int n)
	{
		 if (n <= 1)
		      return false;

		    int m = 2;
		    if (n==2)
		    	return true;
		    else if (n%2==0)
		    	return false;
		    while (m * m <= n)
		    {
		 if (m%2==0)
			 m++;
		 else if (n % m == 0)
		        return false;
		 else
		        	m++;
		    }

		    return true;
	}
