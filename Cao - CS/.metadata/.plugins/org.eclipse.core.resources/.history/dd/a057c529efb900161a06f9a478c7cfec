
public class Question20 {
	
	public static void printStarTriangle(int n)
	{
		for(int line =n; line>=1;line--){
			for(int space=0; space<=(2*line-1)/2+1; space++){
				System.out.print(" ");
			}
			for(int star=1; star<=2*line-1; star+=2){
				System.out.println();
				System.out.print("*");
			}
		}
	}

	public static void main(String[] args) {
		printStarTriangle(5);
	}

}
