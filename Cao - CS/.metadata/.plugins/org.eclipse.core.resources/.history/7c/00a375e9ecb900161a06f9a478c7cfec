
public class Question20 {
	
	public static void printStarTriangle(int n)
	{
		for(int line =1; line<=n;line++){
			for(int space=(2*line-1)/2+1; space>0; space++){
				System.out.print(" ");
			}
			for(int star=1; star<=2*n-1; star+=2){
				System.out.println("*");
			}
		}
	}

	public static void main(String[] args) {
		printStarTriangle(5);
	}

}
